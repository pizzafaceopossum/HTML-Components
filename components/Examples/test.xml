<xml>
	<cdefn ctype="button">
		<cInherit style="background-color;position;color" onclick=""><span style="position:relative;">span</span><span>span</span></cInherit>
		<cChildren climit='0'></cChildren>
		<div style="background-color:#f0f"><span>div</span></div>
	</cdefn>

	<cdefn ctype="button2">
		<cInherit style="background-color;position;color" onclick=""><span style="position:relative;">span</span><span>span</span></cInherit>
		<cChildren climit='0'></cChildren>
		<div style="background-color:#f0f"><span>div</span></div>
	</cdefn>
	
	<cdefn ctype="inner">
		<cInherit style="background-color;color" title="">
			<span>2 (Inherits colors from inner which inherits all from outer)</span>
		</cInherit>
		<cInherit style="background-color;color" title="">
			<span style="color:#0ff">3 (Inherits colors from inner but has text color set)</span>
		</cInherit>
		<cChildren></cChildren>
		<span>5 (Inherits nothing from inner)</span>
	</cdefn>
	
	<cdefn ctype="outer">
		<cInherit style="background-color;color" title="">
			<span>1 (inherits colors)</span>
		</cInherit>
		<cInherit all="">
		<component ctype="inner"><span>4 (inherits nothing from Outer)</span></component>
		<cChildren></cChildren>
		</cInherit>
		<cInherit style="background-color;color" title="">
			<span style="color:#0f0">7 (set to inherit colors but has text color set)</span>
		</cInherit>
	</cdefn>

	<cdefn ctype="outer2">
		<cInherit style="background-color;color" title="">
			<span>1 (inherits colors)</span>
		</cInherit>
		<cInherit all="">
		<cChildren></cChildren>
		</cInherit>
		<cInherit style="background-color;color" title="">
			<span style="color:#0f0">7 (set to inherit colors but has text color set)</span>
		</cInherit>
	</cdefn>

	<styleclass stype="class" style="background-color: #f00; color:#0f0"></styleclass>
</xml>